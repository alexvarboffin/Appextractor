<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#005251"
                android:centerY="1.0"
                android:endColor="#005251"
                android:startColor="#005251" />
        </shape>
    </item>

    <!-- Define the onProgress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#00FDFE"
                    android:centerY="1.0"
                    android:endColor="#00FDFE"
                    android:startColor="#00FDFE" />
            </shape>
        </clip>
    </item>
</layer-list>